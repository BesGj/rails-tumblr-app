<div class="comments">
  <div class="content">
    <p class="comment-name"><strong>Author: <%= comment.name %></strong></p>
    <p class="comment-body">Content: <%= comment.body %></p>
    <p class="comment-title">Date: <%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>

  <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "btn btn-danger", date: { confirm: "Are you sure" } %></p>
</div>
