<div class="container">

  <h1 style="margin-top: 20px; color: #00b894">Make a New Post</h1>


  <%= form_for :post, url: posts_path do |f| %>
  <% if @post.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> stopped this post from saving</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg|  %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit class:"btn btn-info" %>
    </p>
  <% end %>
</div>
